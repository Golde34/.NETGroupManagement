                        <path stroke-linecap="round" stroke-width="2" stroke="#6E49CB" d="M21 37V23m-7 7h14"></path>
                    </svg> <h1>Modify Group</h1>
                    <div class="card">
                        <p>Groups allow you to manage and collaborate across multiple projects.</p>
                        <p>Members of a group have access to all of its projects.</p>
                        <h6 class="text-danger">@ViewBag.Message</h6>
                        <br />
                        @{
                            var gr = (Group)ViewBag.g;
                        }
                        @using (Html.BeginForm("ModifyGroup", "Group", FormMethod.Post, new { @class = "form-modifygroup" }))
                        {

                            <table class="table table-striped">
                                <tr>
                                    <td style="width: 30%;"><strong>Group Name</strong></td>
                                    <td style="width: 70%;">
                                        <input pattern="[^' ']+" class="form-control" type="text" name="groupname" value="@gr.groupName" required>
                                        <div class="invalid-feedback">
                                            Not blank and no space at beginning or ending
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Description</strong></td>
                                    <td>
                                        <input class="form-control" type="text" name="description" value="@gr.description" required>
                                        <div class="invalid-feedback">
                                            Not blank
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Visibility level</strong></td>
                                    <td>
                                        @if (gr.state == 1)
                                        {
                                            <input type="radio" id="statePrivate" name="state" value="Private">
                                            <i class="fas fa-lock"></i><label for="statePrivate">Private</label>
                                            <p> The group and its projects can only be viewed by members.  </p>
                                            <input type="radio" id="statePublic" name="state" value="Public" checked>
                                            <i class="fas fa-globe"></i><label for="statePublic">Public</label>
                                            <p> The group and any public projects can be viewed without any authentication.</p>
                                        }
                                        else
                                        {
                                            <input type="radio" id="statePrivate" name="state" value="Private" checked>
                                            <i class="fas fa-lock"></i><label for="statePrivate">Private</label>
                                            <p> The group and its projects can only be viewed by members.  </p>
                                            <input type="radio" id="statePublic" name="state" value="Public">
                                            <i class="fas fa-globe"></i><label for="statePublic">Public</label>
                                            <p> The group and any public projects can be viewed without any authentication.</p>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Purpose</strong></td>
                                    <td>
                                        <input class="form-control" type="text" name="purpose" value="@gr.purpose" required>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td>
                                        <input type="hidden" name="grId" value="@gr.groupId" />
                                        <input type="submit" value="Save Changes" class="btn btn-primary">
                                        <input type="reset" value="Reset" class="btn btn-info" />
                                        @Html.ActionLink("Cancel", "ViewGroupsOfUser", "Member", null, new { @class = "clsButtonFake" })
                                    </td>
                                </tr>

                            </table>
                        }
