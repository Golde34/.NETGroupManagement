                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@ux.User.fullname</span>
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="@Url.Action("UserProfile","Account")">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                @if (ux.User.isAdmin == true)
                                {
                                    <a class="dropdown-item" href="@Url.Action("UserManagement","Admin")">
                                        <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Admin
                                    </a>
                                }
                                <a class="dropdown-item" href="@Url.Action("ChangePassword","Account")">
                                    <i class="fas fa-list fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Change Password
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("Logout","Account")">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Issues</h1>

                    <div class="row">

                        <div class="col-lg-12">

                            <!-- Circle Buttons -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Issues</h6>
                                </div>
                                <div class="card-body">
                                    <!-- Circle Buttons (Default) -->
                                    <div class="table-responsive">
                                        <table id="table_id" style="width: 100%;" class="table text-center">
                                            <thead class="text-uppercase bg-gray-200">
                                                <tr>
                                                    <th style="width: 15%">Issue Name</th>
                                                    <th style="width: 20%">Start Date</th>
                                                    <th style="width: 20%">Due Date</th>
                                                    <th style="width: 10%">Create</th>
                                                    <th style="width: 10%">Assignee</th>
                                                    <th style="width: 10%">State</th>
                                                    @if (ux.roleId == 1)
                                                    {
                                                        <th style="width: 15%">Action</th>
                                                    }
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    Model model = new Model();
                                                }
                                                @foreach (var item in Model)
                                                {


                                                <tr>
                                                    @{

                                                        User user = model.Users.Find(item.creator);
                                                        User assignee = model.Users.Find(item.assignee);
                                                    }

                                                    <td>
                                                        @if (ux.userID == item.assignee || ux.userID == item.creator)
                                                        {
                                                            <a href="@Url.Action("IssueDetail", "Issue", new { iid = item.issueId })">@item.title</a>
                                                        }
                                                        else
                                                        {
                                                            @item.title
                                                        }

                                                    </td>
                                                    @{ string startdate = item.startDate.ToString("dd-MM-yyyy");}
                                                    @{ string duedate = item.dueDate.ToString("dd-MM-yyyy");}
                                                    <td>@startdate</td>
                                                    <td>@duedate</td>

                                                    <td>@user.fullname</td>
                                                    <td>@assignee.fullname</td>
                                                    @if (item.state == 0)
                                                    {
                                                        <td>Postpone</td>
                                                    }
                                                    else if (item.state == 1)
                                                    {
                                                        <td>Doing</td>
                                                    }
                                                    else
                                                    {
                                                        <td>Done</td>
                                                    }


                                                    @if (ux.roleId == 1 && item.status == true)
                                                    {
                                                        <td>
                                                            <a class="btn btn-success" href="@Url.Action("EditIssue", "Issue", new { iid = item.issueId })">Edit</a>


                                                            <a class="btn btn-danger" href="@Url.Action("Delete", "Issue", new { id = item.issueId })" onclick="return confirm('Are you sure?');">Delete</a>
                                                        </td>





                                                    }
                                                    @if (ux.roleId == 1 && item.status == false)
                                                    {
                                                        <td>
                                                            <a class="btn btn-success" href="@Url.Action("EditIssue", "Issue", new { iid = item.issueId })">Edit</a>

                                                        </td>
                                                        <td>
                                                            <a class="btn btn-success" href="@Url.Action("Restore", "Issue", new { id = item.issueId })" onclick="return confirm('Are you sure?');">Restore</a>
                                                        </td>
                                                    }



                                                </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>LilLab&copy; 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->
        </div>
        <!-- End of Content Wrapper -->
    </div>
