
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Edit Information</title>
    <!--        <link rel="shortcut icon" type="image/png" href="images/80jslogo.png">-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #FAFAFA;
            font-family: "Amazon Ember",Arial,sans-serif;
        }

        .container .form-edit {
            background-color: #ffffff;
            padding-left: 25px;
        }

        .nav nav-tabs {
            font-family: "Amazon Ember",Arial,sans-serif;
        }

        p {
            font-size: 15px;
        }

        .card {
            padding: 15px;
        }
    </style>
</head>
<body>

    <div class="container">
        <br /><br />

        <svg xmlns="http://www.w3.org/2000/svg" height="60" width="101">
            <path stroke-width="2" stroke="#DBDBDB" fill="#F0F0F0" d="M99.355 6.607l-6.89 48.23c-.191 1.338-1.801 1.915-2.799 1.005L36.842 7.61c-1.134-1.036-.402-2.924 1.133-2.924H97.69c1.024 0 1.81.906 1.665 1.92z"></path>
            <path stroke-linejoin="round" stroke-width="2" stroke="#DBDBDB" fill="#fff" d="M47.939 12.997a1 1 0 00.965.74h41.487c.929 0 1.682.753 1.682 1.682v41.564c0 .929-.753 1.682-1.682 1.682h-67.71A1.682 1.682 0 0121 56.983V15.42c0-.072.005-.143.013-.211.01-.083.01-.166 0-.248A1.706 1.706 0 0121 14.75V2.682C21 1.752 21.753 1 22.682 1H43.42c.76 0 1.426.51 1.623 1.244l2.896 10.753z"></path>
            <circle stroke-width="2" stroke="#6E49CB" fill="#fff" r="20" cy="30" cx="21"></circle>
            <circle fill="#6E49CB" r="17" cy="30" cx="21"></circle>
            <circle fill-opacity=".9" fill="#fff" r="17" cy="30" cx="21"></circle>
            <path stroke-linecap="round" stroke-width="2" stroke="#6E49CB" d="M21 37V23m-7 7h14"></path>
        </svg> <h1>Create Group</h1>
        <div class="tab-content">
            <div class="card">
                <p>Groups allow you to manage and collaborate across multiple projects.</p>
                <p>Members of a group have access to all of its projects.</p>
                <div class="tab-pane fade in active" id="public-name">
                    <br />
                    @using (Html.BeginForm("AddGroup", "Group", FormMethod.Post, new { @class = "form-addgroup" }))
                    {
                        <table class="table table-striped">
                            <tr>
                                <td style="width: 30%;"><strong>Group Name</strong></td>
                                <td style="width: 70%;">
                                    <input pattern="[^' ']+" class="form-control" type="text" name="groupname" required>
                                    <div class="invalid-feedback">
                                        Not blank and no space at beginning or ending
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Description</strong></td>
                                <td>
                                    <textarea pattern="[^' ']+" class="form-control" type="text" name="description" required></textarea>
                                    <div class="invalid-feedback">
                                        Not blank and no space
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Visibility level</strong></td>
                                <td>
                                    <input type="radio" id="statePrivate" name="state" value="Private" checked>
                                    <i class="fas fa-lock"></i><label for="statePrivate">Private</label>
                                    <p> The group and its projects can only be viewed by members.  </p>
                                    <input type="radio" id="statePublic" name="state" value="Public">
                                    <i class="fas fa-globe"></i><label for="statePublic">Public</label>
                                    <p> The group and any public projects can be viewed without any authentication.</p>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Purpose</strong></td>
                                <td>
                                    <select style="height:28px;" name="purpose" id="purpose">
                                        <option value="I want to manage my projects well">I want to manage my projects well </option>
                                        <option value="I want to create a community for my social project">I want to create a community for my social project</option>
                                        <option value="I want to store my activity in project">I want to store my activity in project</option>
                                        <option value="I want to explore GitLab to see if it’s worth switching to">I want to explore GitLab to see if it’s worth switching to </option>
                                        <option value="A different reason">A different reason </option>
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <input type="submit" value="Add Group" class="btn btn-primary">
                                    <input type="reset" value="Reset" class="btn btn-info" />
                                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "clsButtonFake" })
                                </td>
                            </tr>
                        </table>
                    }
                </div>
            </div>
            <!--Turn on Seller Feature-->
            <div id="sales-feature" class="tab-pane fade">
                The system has not completed this feature yet
            </div>
        </div>
    </div>
    <br><br><br>
    <jsp:include page="../footer.jsp" />
</body>

</html>
